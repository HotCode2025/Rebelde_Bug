package domain;
public class Leccion10Empleado extends Leccion10Persona{
    private int idEmpleado;
    private double sueldo;
    private static int contadorEmpleados; //Es para incrementar
    
    //Constructores
    
    public Leccion10Empleado(){ //Constructor1
        this.idEmpleado = ++Leccion10Empleado.contadorEmpleados;
    }
   
    public Leccion10Empleado(String nombre, double sueldo) { //Constructor2
        //super(nombre);
        this(); //Estamos llamando desde aca al constructor vac√≠o(llamar a un constructor interno)
        this.nombre = nombre;
        this.sueldo = sueldo;
    }

    public int getIdEmpleado() {
        return this.idEmpleado;
    }

    public double getSueldo() {
        return this.sueldo;
    }

    public void setSueldo(double sueldo) {
        this.sueldo = sueldo;
    }

    @Override
    public String toString() {
        StringBuilder sb = new StringBuilder();
        sb.append("Empleado{");
        sb.append("idEmpleado=").append(idEmpleado);
        sb.append(", sueldo=").append(sueldo);
        sb.append(", ").append(super.toString());
        sb.append('}');
        return sb.toString();
    }    
}
